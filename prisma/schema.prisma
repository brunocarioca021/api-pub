generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  birthdate DateTime @default(now())
  email     String   @unique
  password  String
  imageUrl  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Table     Table?   @relation(fields: [tableId], references: [id])
  tableId   Int?

  @@map("user")
}

model Menu {
  id          Int        @id @default(autoincrement())
  title       String
  description String
  imageUrl    String
  price       Float
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  tables      Requests[]
  Options     Options?   @relation(fields: [optionsId], references: [id])
  optionsId   Int?

  @@map("menu")
}

model Options {
  id        Int      @id @default(autoincrement())
  title     String
  itens     Menu[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("options")
}

model Table {
  id         Int        @id @default(autoincrement())
  itens      Requests[]
  users      User[]
  share      Boolean?   @default(true)
  cash       Boolean?   @default(true)
  totalPrice Float?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@map("table")
}

model Requests {
  id        Int      @id @default(autoincrement())
  Menu      Menu?    @relation(fields: [menuId], references: [id])
  menuId    Int?
  Table     Table?   @relation(fields: [tableId], references: [id])
  tableId   Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("requests")
}
